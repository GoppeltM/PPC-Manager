<Page x:Class="Begegnungen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PPC_Manager"
      xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
      mc:Ignorable="d" Title="Begegnungen" d:DesignHeight="573" d:DesignWidth="1034" Name="BegegnungenPage">
    <Page.Resources>
        <local:SatzFarbenPainter x:Key="MyPainter" />
        <local:StringFormatter x:Key="StringFormatter" />
        <local:AusgeschiedenPainter x:Key="AusgeschiedenPainter"/>
        <ObjectDataProvider x:Key="RanglisteDataProvider"/>
        <local:RanglisteIndexConverter x:Key="RanglisteIndexConverter"/>
        <CollectionViewSource x:Key="SpielRundenView" Source="{Binding Source={StaticResource SpielRunden}, UpdateSourceTrigger=PropertyChanged}"
           d:DesignSource="{Binding Source={d:DesignInstance Type=local:DesignSpielRunden, IsDesignTimeCreatable=True}}"/>
        <CollectionViewSource x:Key="PartieView" Filter="BegegnungenListView_Filter"                              
                              Source="{Binding Source={StaticResource SpielRundenView}, Path=/, UpdateSourceTrigger=PropertyChanged}" />        
        <CollectionViewSource x:Key="SpielerView"
                              d:DesignSource="{d:DesignInstance Type=local:DesignSpielerListe, IsDesignTimeCreatable=True}"
                      Source="{Binding Source={StaticResource SpielerListe}}">
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="Punkte" Direction="Descending"/>
                <scm:SortDescription PropertyName="BuchholzPunkte" Direction="Descending"/>
                <scm:SortDescription PropertyName="SatzDiff" Direction="Descending"/>
                <scm:SortDescription PropertyName="StartNummer" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </Page.Resources>
    <Page.CommandBindings>
        <CommandBinding Command="Favorites" Executed="BegegnungenFiltern_Executed"/>
        <CommandBinding Command="NextPage" Executed="NächsteRunde_Executed" CanExecute="NächsteRunde_CanExecute"/>
    </Page.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96" />
            <RowDefinition Height="378*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>        
            <ListView Name="ListView1" SelectedIndex="-1" Margin="10,5,20,5" Grid.RowSpan="2" SelectionMode="Single"
                      ItemsSource="{Binding Source={StaticResource SpielerView}}"
                      Grid.Column="0" TextBlock.FontSize="20">
            <ListView.CommandBindings>
                <CommandBinding Command="Delete" CanExecute="Ausscheiden_CanExecute" Executed="Ausscheiden_Executed"/>
            </ListView.CommandBindings>
                <ListView.ContextMenu>
                <ContextMenu>
                    <ContextMenu.Items>
                        <MenuItem Header="Spieler ausscheiden" Name="MenuItem1" Command="Delete" />
                    </ContextMenu.Items>
                </ContextMenu> 
            </ListView.ContextMenu>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ListViewItem Background="{Binding Path=Ausgeschieden, Converter={StaticResource AusgeschiedenPainter}}" IsHitTestVisible="False">                        
                        <Grid Margin="5" Width="180">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="20" />
                                <ColumnDefinition/>
                                <ColumnDefinition Width="30" />
                                <ColumnDefinition Width="20" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>                                
                            </Grid.RowDefinitions>                            
                            <TextBlock Grid.Column="0" Grid.RowSpan="2"
                                   FontSize="16" FontWeight="Bold" Foreground="#FF8D7979"
                                   Text="{Binding Converter={StaticResource RanglisteIndexConverter}, ConverterParameter={StaticResource RanglisteDataProvider}}"
                                   />
                            <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Path=Vorname}" HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Path=Nachname}" HorizontalAlignment="Center" />
                            <TextBlock Grid.Column="2" Grid.Row="0" Text="{Binding Path=Punkte}" HorizontalAlignment="Center" ToolTip="Punkte" />
                            <TextBlock Grid.Column="2" Grid.Row="1" Text="{Binding Path=BuchholzPunkte}" HorizontalAlignment="Center" ToolTip="Buchholzpunkte" />
                            <TextBlock Grid.Column="3" Grid.Row="0" Text="{Binding Path=SätzeGewonnen}" HorizontalAlignment="Center" ToolTip="Gewonnene Sätze" />
                            <Line Grid.Column="3" Grid.RowSpan="2" Stroke="Black" StrokeThickness="2" Stretch="Fill" X2="1" Margin="2" ToolTip="Verlorene Sätze" />
                            <TextBlock Grid.Column="3" Grid.Row="1" Text="{Binding Path=SätzeVerloren}" HorizontalAlignment="Center" />
                        </Grid>
                    </ListViewItem> 
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <GridSplitter Grid.Column ="0" Background="Blue" Width="5"
                HorizontalAlignment="Right" VerticalAlignment="Stretch" Grid.RowSpan="2" Margin="5" />
        <Label Grid.Column="1" Height="54" HorizontalAlignment="Right" Margin="0,10,12,0" 
               Name="RundenAnzeige" VerticalAlignment="Top" Width="141" FontSize="24" HorizontalContentAlignment="Right" Content="Runde 1" />
        <ListBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Name="SpielPartienView" VerticalAlignment="Stretch" FontSize="24" 
                 DataContext="{Binding Source={StaticResource PartieView}}"
                 ItemsSource="{Binding}" IsSynchronizedWithCurrentItem="True"
                 d:DataContext="{Binding Source={d:DesignInstance Type=local:DesignSpielRunden, IsDesignTimeCreatable=True}, Path=/}">
            <ListBox.Resources>
                <DataTemplate DataType="{x:Type local:FreiLosSpiel}">
                    <StackPanel>
                        <TextBlock Text="{Binding Path=SpielerLinks.Nachname}"/>
                        <TextBlock Text="Freilos"/>
                    </StackPanel>
                </DataTemplate>
                <DataTemplate DataType="{x:Type local:SpielPartie}">
                    <Grid Margin="5" FrameworkElement.HorizontalAlignment="Center" TextBlock.FontSize="30">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <local:MeineGewonnenenSätze x:Key="MeineGewonnenenSätze" />
                        </Grid.Resources>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding Path=SpielerLinks.StartNummer}" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Path=SpielerRechts.StartNummer}" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Path=SpielerLinks.Nachname}" Margin="0,0,10,0" />
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Path=SpielerRechts.Nachname}" Margin="0,0,10,0" />
                        <ItemsControl Grid.Row="0" Grid.Column="2" ItemsSource="{Binding}" Margin="0,0,10,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Grid.Row="0" Grid.Column="2" Width="10" Height="10" Margin="2" Visibility="{Binding Path=PunkteLinks, Mode=TwoWay, Converter={StaticResource MeineGewonnenenSätze}}">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush>
                                                <GradientStop Color="SpringGreen" Offset="0" />
                                                <GradientStop Color="#FF23654C" Offset="1" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <ItemsControl Grid.Row="1" Grid.Column="2" ItemsSource="{Binding}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Ellipse Grid.Row="0" Grid.Column="2" Width="10" Height="10" Margin="2" Visibility="{Binding Path=PunkteRechts, Mode=TwoWay, Converter={StaticResource MeineGewonnenenSätze}}">
                                        <Ellipse.Fill>
                                            <RadialGradientBrush>
                                                <GradientStop Color="SpringGreen" Offset="0" />
                                                <GradientStop Color="#FF23654C" Offset="1" />
                                            </RadialGradientBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </DataTemplate>
            </ListBox.Resources>
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}" />
                </ItemsPanelTemplate>                
            </ListBox.ItemsPanel>            
        </ListBox>
        <Grid Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Left" Margin="5" 
              Name="DetailGrid" VerticalAlignment="Stretch" DataContext="{Binding Path=/, Source={StaticResource PartieView}, Mode=TwoWay}" 
              d:DataContext="{x:Static local:DesignSpielPartien.DesignSpielPartie}"
              MinWidth="500">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                
                <Style x:Key="SatzListe" TargetType="ItemsControl">
                    <Setter Property="Grid.Column" Value="1"/>
                    <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
                    <Setter Property="ItemsSource" Value="{Binding}" />
                    <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                    <Setter Property="VerticalContentAlignment" Value="Stretch" />                    
                    <Setter Property="ItemsPanel">
                        <Setter.Value>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>                            
                        </Setter.Value>
                    </Setter>
                </Style>             
            </Grid.Resources>
            <TextBlock Grid.Column="0" Grid.Row="0" Text="{Binding Path=SpielerLinks.Nachname}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
            <TextBlock Grid.Column="0" Grid.Row="1" Text="{Binding Path=SpielerRechts.Nachname}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" />
            <ItemsControl Grid.Row="0" Style="{StaticResource SatzListe}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Name="Button1" Click="SatzLinks_Click" DataContext="{Binding}" Background="{Binding Path=PunkteLinks, Converter={StaticResource MyPainter}}" MinWidth="30" Margin="5" />                        
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            <ItemsControl Grid.Row="1" Style="{StaticResource SatzListe}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Name="Button1" Click="SatzRechts_Click" DataContext="{Binding}" 
                                Background="{Binding Path=PunkteRechts, Converter={StaticResource MyPainter}}" 
                                MinWidth="30" Margin="5" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid>
    </Grid>
</Page>
