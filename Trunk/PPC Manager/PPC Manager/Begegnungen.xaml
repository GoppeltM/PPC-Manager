<Page x:Class="Begegnungen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PPC_Manager"
      mc:Ignorable="d" 
      d:DesignHeight="368" d:DesignWidth="572"
      Title="Begegnungen">
    <Page.Resources>
        <local:SatzFarbenPainter x:Key="MyPainter" />
        <CollectionViewSource x:Key="MyView" x:Name="CollectionViewSource1" Filter="CollectionViewSource1_Filter" />
        <DataTemplate x:Key="PunkteDisplay">
            <StackPanel>
                <Label Content="{Binding Path=SpielerLinks}"></Label>
                <Separator></Separator>
                <Label Content="{Binding Path=SpielerRechts}"></Label>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="SätzeDisplay">
            <ItemsControl ItemsSource="{Binding}" IsTabStop="False">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"></StackPanel>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <Label Content="{Binding Path=PunkteLinks, Mode=TwoWay}" Background="{Binding Path=PunkteLinks,Converter={StaticResource MyPainter}}" ></Label>
                            <Label Content="{Binding Path=PunkteRechts, Mode=TwoWay}" Background="{Binding Path=PunkteRechts,Converter={StaticResource MyPainter}}"></Label>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DataTemplate>       
    </Page.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="4"/>
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <ListView HorizontalAlignment="Stretch" Name="ListView1" VerticalAlignment="Stretch" ItemsSource="{Binding Source={StaticResource MyView}}" ItemTemplate="{StaticResource SätzeDisplay}" Margin="0,39,0,0" IsSynchronizedWithCurrentItem="True" SelectedIndex="-1">
            <ListView.View>
                <GridView AllowsColumnReorder="False">
                    <GridViewColumn CellTemplate="{StaticResource PunkteDisplay}" />
                    <GridViewColumn CellTemplate="{StaticResource SätzeDisplay}" />
                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter HorizontalAlignment="Stretch" Name="GridSplitter1" VerticalAlignment="Stretch" ResizeDirection="Columns" Grid.Column="1" Margin="0,39,0,0" ShowsPreview="True" Background="#FF767474" />
        <CheckBox Content="Nur offene Begegnungen" Height="16" HorizontalAlignment="Left" Margin="12,17,0,0" Name="CheckBox1" VerticalAlignment="Top" />
        <Label Grid.Column="2" Height="28" HorizontalAlignment="Left" Margin="5,17,0,0" Name="Label1" VerticalAlignment="Top" Width="155" HorizontalContentAlignment="Center" Content="{Binding Source={StaticResource MyView}, Path=SpielerLinks}" />
        <Label Content="{Binding Source={StaticResource MyView}, Path=SpielerRechts}" Height="28" Margin="4,127,0,0" Name="Label2" VerticalAlignment="Top" Grid.Column="2" Width="155" HorizontalContentAlignment="Center" HorizontalAlignment="Left" />
        <ItemsControl Margin="4,49,0,0" Grid.Column="2" ItemsSource="{Binding Source={StaticResource MyView}, Path=/}" Height="72" VerticalAlignment="Top" HorizontalAlignment="Left" Width="155">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center"></StackPanel>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="5">
                        <TextBox Text="{Binding Path=PunkteLinks}" Background="{Binding Path=PunkteLinks,Converter={StaticResource MyPainter}}" Name="textBox1" LostFocus="UpdateView"></TextBox>
                        <TextBox Text="{Binding Path=PunkteRechts}" Background="{Binding Path=PunkteRechts,Converter={StaticResource MyPainter}}" LostFocus="UpdateView"></TextBox>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <GridSplitter Grid.Column="3" ResizeDirection="Columns" ShowsPreview="True" HorizontalAlignment="Stretch"></GridSplitter>
        <ListBox Grid.Column="4" Name="ListBox1">
            <ListBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Disqualifizieren...">
                        
                    </MenuItem>
                </ContextMenu>
            </ListBox.ContextMenu>
            <ListBoxItem>
                <local:Spieler></local:Spieler>
            </ListBoxItem>
        </ListBox>
        <Expander Grid.Column="2" Header="Aus dem Spiel ausgestiegen" Height="100" HorizontalAlignment="Left" Name="Expander1" VerticalAlignment="Bottom" ExpandDirection="Up" Width="185" Margin="5,0,0,12">
            <ListBox>
                <ListBoxItem>
                    <local:Spieler Vorname="Erik" Nachname="Svenson"></local:Spieler>
                </ListBoxItem>
            </ListBox>
        </Expander>
        <Label Content="Freilos Spieler:" Grid.Column="2" Height="28" HorizontalAlignment="Left" Margin="5,186,0,0" Name="Label3" VerticalAlignment="Top" />
        <Label Content="XYZ" Height="28" HorizontalAlignment="Left" Margin="104,186,0,0" Name="Label4" VerticalAlignment="Top" Grid.Column="2" Width="111" />
    </Grid>
</Page>
