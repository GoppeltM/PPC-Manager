<Page x:Class="Begegnungen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PPC_Manager"
      mc:Ignorable="d" Title="Begegnungen" d:DesignHeight="474" d:DesignWidth="900">
    <Page.Resources>
        <local:SatzFarbenPainter x:Key="MyPainter" />
        <local:RundenAnzeige x:Key="RundenAnzeige" />
        <CollectionViewSource x:Key="PartieView" Filter="BegegnungenListView_Filter" Source="{Binding Source={StaticResource SpielRunden}, Path=/}" />                       
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96" />
            <RowDefinition Height="378*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>        
            <ListView Name="ListView1" ItemsSource="{Binding Source={StaticResource SpielerListe}}" SelectedIndex="-1" Margin="10" Grid.RowSpan="2" SelectionMode="Single">  
        </ListView>
        <GridSplitter Name="GridSplitter1" ResizeDirection="Columns" Grid.Column="1" ShowsPreview="True" Background="#FF767474" Width="1" Grid.RowSpan="2" />
        <Label Content="{Binding Source={StaticResource SpielRunden}, Path=Count, Converter={StaticResource RundenAnzeige}}" Grid.Column="2" Height="54" HorizontalAlignment="Right" Margin="0,10,12,0" Name="RundenAnzeige" VerticalAlignment="Top" Width="141" FontSize="24" HorizontalContentAlignment="Right" />
        <ListBox Grid.Column="2" Grid.Row="1" HorizontalAlignment="Stretch" Name="SpielPartienView" VerticalAlignment="Stretch" FontSize="24" ItemsSource="{Binding Source={StaticResource PartieView}}">
            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel Width="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=ActualWidth}" />
                </ItemsPanelTemplate>                
            </ListBox.ItemsPanel>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Label Content="{Binding Path=SpielerLinks.Nachname}"/>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <Grid Grid.Column="2" Height="78" HorizontalAlignment="Left" Margin="100,12,0,0" Name="Grid1" VerticalAlignment="Top" Width="415" DataContext="{Binding Path=/, Source={StaticResource PartieView}}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="110*" />
                <ColumnDefinition Width="80*" />
                <ColumnDefinition Width="23" />
                <ColumnDefinition Width="40" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="{Binding Path=SpielerLinks.Nachname}"/>
            <Label Grid.Column="0" Grid.Row="1" Content="{Binding Path=SpielerRechts.Nachname}"/>
            <ListBox Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ItemsSource="{Binding}" Name="PunkteObenListe">
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>                    
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Label Content="{Binding Path=PunkteLinks}" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <TextBox Grid.Row="0" Grid.Column="2" Name="PunkteOben" />
            <TextBox Grid.Row="1" Grid.Column="2" Name="PunkteUnten" />
            <Button Grid.RowSpan="2" Grid.Column="3" Margin="5" IsDefault="True">OK</Button>
            
            
        </Grid>
    </Grid>
</Page>
