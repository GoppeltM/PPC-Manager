            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label Grid.Column="0" Grid.Row="0" Content="Test"/>
            <Label Grid.Column="0" Grid.Row="1" Content="Test"/>
            <ListBox Grid.Column="1" ItemsSource="{Binding Source={x:Static local:MySettings.Default}, Path=Vereine}" >
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>                    
                </ListBox.ItemsPanel>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBox>Test</TextBox>
