<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PPC_Manager"
    Title="MainWindow" Height="433" Width="792" Name="MyWindow" SnapsToDevicePixels="True">
    
    <Window.Resources>
        <local:SpielerListe x:Key="myPersonen" />
        <local:MySettings x:Key="Settings" />
    </Window.Resources>

    <Grid Margin="20">
        <DataGrid Grid.Row="0" Grid.Column="0" Margin="12,29,0,0" Name="DataGrid1" ItemsSource="{Binding Source={StaticResource myPersonen}}" RowHeaderWidth="20" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AutoGenerateColumns="False" SelectionUnit="CellOrRowHeader">
            <DataGrid.CommandBindings>
                <CommandBinding Command="ApplicationCommands.Paste" CanExecute="CommandBinding_CanExecute" Executed="CommandBinding_Executed"/>
            </DataGrid.CommandBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=Vorname}" Header="Vorname" Width="*" x:Name="Vorname" />
                <DataGridTextColumn Binding="{Binding Path=Nachname}" Header="Nachname" Width="*" x:Name="Nachname" />
                <DataGridComboBoxColumn SelectedItemBinding="{Binding Path=Verein}" Header="Verein" Width="*" ItemsSource="{Binding Source={StaticResource Settings}, Path=Vereine}" Selector.IsSelected="True" x:Name="Verein" />
                <DataGridTextColumn Binding="{Binding Path=SpielKlasse}" Header="Spielklasse" Width="0.5*" x:Name="SpielKlasse" />
                <DataGridTextColumn Binding="{Binding Path=Position}" Header="Position" Width="*" x:Name="Position" />
                <DataGridTextColumn Binding="{Binding Path=TurnierKlasse}" Header="Turnierklasse" Width="*" x:Name="Turnierklasse" />
            </DataGrid.Columns>
        </DataGrid>
        <Menu Height="23" HorizontalAlignment="Left" Name="Menu1" VerticalAlignment="Top" Width="136">
            <MenuItem Header="Projekt">
                <MenuItem Header="Öffnen..." Name="Öffnen" />
                <MenuItem Header="Vereine..." Name="Vereine" />
                <MenuItem Header="Beenden..."></MenuItem>
            </MenuItem>
            <MenuItem Header="Bearbeiten">
                <MenuItem Command="ApplicationCommands.Copy" Header="Kopieren" />
                <MenuItem Command="ApplicationCommands.Paste" Header="Einfügen" />
            </MenuItem>
        </Menu>
        <Button Content="Button" Height="23" HorizontalAlignment="Left" Margin="269,194,0,0" Name="Button1" VerticalAlignment="Top" Width="75" />
    </Grid>
</Window>
