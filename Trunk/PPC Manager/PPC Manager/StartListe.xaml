<Page x:Class="StartListe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PPC_Manager"
      
      mc:Ignorable="d" Title="StartListe" d:DesignHeight="300" d:DesignWidth="731">    
    <Grid>
        <Grid.Resources>
            <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
                <Setter Property="IsEditable" Value="True"/>
                <Setter Property="StaysOpenOnEdit" Value="True"/>
                <Setter Property="Selector.IsSelected" Value="true"/>                
            </Style>
            <CollectionViewSource x:Key="EditableView" Source="{Binding Source={StaticResource SpielerListe}}" />
        </Grid.Resources>
            <DataGrid Name="DataGrid1" ItemsSource="{Binding Source={StaticResource EditableView}}" RowHeaderWidth="20" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" AutoGenerateColumns="False" SelectionUnit="CellOrRowHeader" AllowDrop="True">
                <DataGrid.CommandBindings>
                    <CommandBinding Command="ApplicationCommands.Cut" CanExecute="Cut_CanExecute" Executed="Cut_Executed"/>
                    <CommandBinding Command="ApplicationCommands.Paste" CanExecute="Paste_CanExecute" Executed="Paste_Executed"/>
                    <CommandBinding Command="ApplicationCommands.Copy" CanExecute="Copy_CanExecute" Executed="Copy_Executed"/>        
            </DataGrid.CommandBindings>
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Path=Vorname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Vorname" Width="*" x:Name="Vorname" />
                <DataGridTextColumn Binding="{Binding Path=Nachname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Nachname" Width="*" x:Name="Nachname" />
                <DataGridComboBoxColumn SelectedItemBinding="{Binding Path=Verein, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Verein" Width="*" 
                                        ItemsSource="{Binding Path=Vereine, Source={x:Static local:MySettings.Default}}" 
                                        x:Name="Verein" EditingElementStyle="{StaticResource ComboBoxStyle}" />
                    
                <DataGridComboBoxColumn x:Name="SpielKlasse" Width="*" EditingElementStyle="{StaticResource ComboBoxStyle}" 
                                        Header="Spielklasse" SelectedItemBinding="{Binding Path=SpielKlasse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                        ItemsSource="{Binding Source={x:Static local:MySettings.Default}, Path=SpielKlassen}" />

                <DataGridTextColumn Binding="{Binding Path=Position, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Position" Width="*" x:Name="Position" />
                <DataGridTextColumn Binding="{Binding Path=TurnierKlasse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Header="Turnierklasse" Width="*" x:Name="Turnierklasse" />
                <DataGridTextColumn Binding="{Binding Path=Rating, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CanUserReorder="False" CanUserSort="False" Header="ttRating" Width="*" />
                <DataGridTextColumn Binding="{Binding Path=Rang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" CanUserReorder="False" CanUserSort="False" Header="ttRang" Width="*" />
            </DataGrid.Columns>
            <DataGrid.RowHeaderStyle>
                <Style TargetType="DataGridRowHeader">
                    <Setter Property="Content" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type DataGridRow}}, Path=Header}"/>
                </Style>
            </DataGrid.RowHeaderStyle>
        </DataGrid>
            
    </Grid>
    
</Page>
