<Window x:Class="Optionen"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:PPC_Manager"    
    Title="Optionen" Height="393" Width="480" SnapsToDevicePixels="True">

    <Window.Resources>
        <local:VereinsDaten x:Key="Vereine" />
        <local:MySettings x:Key="Settings" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="208*"></RowDefinition>
            <RowDefinition Height="48"></RowDefinition>
            <RowDefinition Height="55" />
            <RowDefinition Height="43" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="395*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Button Content="OK" Grid.Row="3" Height="23" HorizontalAlignment="Left" Margin="290,0,0,12" Name="Button2" VerticalAlignment="Bottom" Width="75" IsDefault="False" />
        <Button Content="Abbrechen" Grid.Row="3" Height="23" HorizontalAlignment="Left" Margin="371,0,0,12" Name="Button3" VerticalAlignment="Bottom" Width="75" IsCancel="True" />
        <Expander Header="Vereine" HorizontalAlignment="Left" Margin="12,12,0,2" Name="Expander1" VerticalAlignment="Stretch" Width="202" ExpandDirection="Down">
            <Grid>
                <DataGrid AutoGenerateColumns="False" Name="DataGrid1" ItemsSource="{Binding Source={StaticResource Vereine}}" HeadersVisibility="None">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Path=Vereinsname}" CanUserReorder="False" CanUserResize="False" Width="*" />
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>            
        </Expander>
        <GroupBox Header="Spielregeln" Height="127" HorizontalAlignment="Left" Margin="234,12,0,0" Name="GroupBox1" VerticalAlignment="Top" Width="212">
            <Grid>
                <CheckBox Content="Satzdifferenz berücksichtigen" Height="16" HorizontalAlignment="Left" Margin="6,6,0,0" Name="CheckBox1" VerticalAlignment="Top" Width="176" IsChecked="{Binding Path=BerücksichtigeSatzDiff, Source={StaticResource Settings}}" />
            </Grid>
        </GroupBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Label Content="Excelvorlage" Height="28" Name="Label1" />
            <TextBox  Height="25" Name="TextBox1" Width="324" />            
            <Button Content="..." Height="23" Name="Button1" Width="25" />
        </StackPanel>
        <StackPanel Grid.Row="2" Orientation="Horizontal" >
            <Label Content="Turniername" Height="28" />
            <TextBox  Height="25"  Width="324" Text="Ping Pong Café"/>
        </StackPanel>
        
    </Grid>
</Window>
