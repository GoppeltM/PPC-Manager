<UserControl x:Class="RanglisteSeite"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PPC_Manager"
             mc:Ignorable="d" d:DesignHeight="1123" d:DesignWidth="793">
    <UserControl.Resources>
        <local:SpielerListe x:Key="Spieler"/>
        <local:IndexConverter x:Key="IndexConverter"/>
    </UserControl.Resources>
    <Grid x:Name="PageContent" Margin="20">        
        <DataGrid x:Name="SpielerRangListe" DataContext="{StaticResource Spieler}" d:DataContext="{d:DesignInstance Type=local:DesignSpielerListe, IsDesignTimeCreatable=True}" ItemsSource="{Binding}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn x:Name="NummerColumn" Header="Rang" Binding="{Binding Converter={StaticResource IndexConverter}, ConverterParameter={StaticResource Spieler}}"/>
                <DataGridTextColumn Header="Vorname" Binding="{Binding Path=Vorname}" />
                <DataGridTextColumn Header="Nachname" Binding="{Binding Path=Nachname}"/>
                <DataGridTextColumn Header="Startnummer" Binding="{Binding Path=Startnummer}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
